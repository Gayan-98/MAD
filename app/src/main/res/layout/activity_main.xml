<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#88BB86FC"
    android:gravity="center"
    tools:context=".activity.MainActivity"
    android:fitsSystemWindows="true"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="70dp"
        app:cardCornerRadius="14dp"
        android:background="@color/alb2"
        android:layout_marginTop="0dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#37EB76A1"
            android:padding="16dp"
            android:text="Choose Your Category"
            android:textColor="#941128B1"
            android:textSize="30dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:background="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:background="@drawable/ww"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">

            <Button
                android:id="@+id/bttonOL"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_marginTop="0dp"
                android:background="#B3B388FF"
                android:orientation="vertical"
                android:padding="6dp"
                android:paddingTop="10dp"
                android:text="Ordinary Level"
                android:textColor="#E0F5F4F1"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnAL"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="#BDB388FF"
                android:orientation="vertical"
                android:padding="6dp"
                android:paddingTop="10dp"
                android:text="Advanced Level"
                android:textColor="#E0F5F4F1"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnInsertData"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="#BDB388FF"
                android:orientation="vertical"
                android:padding="6dp"
                android:paddingTop="10dp"
                android:text="Insertpaper"
                android:textColor="#E0F5F4F1"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnFetchData"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="#BDB388FF"
                android:orientation="vertical"
                android:padding="6dp"
                android:paddingTop="10dp"
                android:text="fech data"
                android:textColor="#E0F5F4F1"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                tools:ignore="DuplicateIds" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>